{
    "version": 8,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "generator": "Ninja"
        },
        {
            "name": "windows-base",
            "inherits": "base",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "windows-x64",
            "inherits": "windows-base",
            "hidden": true,
            "architecture": {
                "value": "x64",
                "strategy": "external"
            }
        },
        {
            "name": "windows-x86",
            "inherits": "windows-base",
            "hidden": true,
            "architecture": {
                "value": "x86",
                "strategy": "external"
            }
        },
        {
            "name": "windows-x64-debug",
            "hidden": false,
            "inherits": "windows-x64",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "windows-x64-release",
            "inherits": "windows-x64",
            "hidden": false,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "windows-x86-debug",
            "hidden": false,
            "inherits": "windows-x86",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "windows-x86-release",
            "hidden": false,
            "inherits": "windows-x86",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "windows-x64-debug-build",
            "displayName": "x64 Windows with Debug",
            "configurePreset": "windows-x64-debug"
        },
        {
            "name": "windows-x86-debug-build",
            "configurePreset": "windows-x86-debug"
        },
        {
            "name": "windows-x64-release-build",
            "configurePreset": "windows-x64-release"
        },
        {
            "name": "windows-x86-release-build",
            "configurePreset": "windows-x86-release"
        }
    ]
}